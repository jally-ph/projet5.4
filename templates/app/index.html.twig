{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}

    <section class="slider">
    
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="../public/img/pen.jpg" class="d-block w-100" alt="pen">
            </div>
            <div class="carousel-item">
                <img src="../public/img/notebook.jpg" class="d-block w-100" alt="notebook">
            </div>
            <div class="carousel-item">
                <img src="../public/img/office.jpg" class="d-block w-100" alt="office">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
    </section>

    <section class="publicBooks">
    <h3 class="lastBooks">Les derniers livres</h3>

    {% for book in books %}
        <article class="card cardIndex">
            <h5 class="card-header">{{ book.title }}</h5>
            <div class="card-body">
                {# <h5 class="card-title">Special title treatment</h5> #}
                <p>{{book.category}} - publié le {{ book.date | date('d/m/Y') }} à {{ book.date | date('H:i') }}</p>
                <p class="card-text">{{ book.content }}</p>
                <a href="{{ path('book_show', {'id': book.id }) }}" class="btn btn-dark">Voir le livre</a>
            </div>
        </article>
    {% endfor %}

    {{ knp_pagination_render(books) }}


    
    </section>
{% endblock %}
