{% extends 'base.html.twig' %}

{% block body %}
    <h2>Connecte-toi</h2>

    {% if app.user %}
        <div class="mb-3">
            Tu es connecté {{ app.user.username }}, <a href="{{ path('security_logout') }}">C'est par ici pour se déconnecter !</a>
        </div>
    {% endif %}

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input placeholder="email" required name="_username" type="text" class="form-control">
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input placeholder="password" required name="_password" type="password" class="form-control">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-dark">Connectez-vous</button>
        </div>
    </form>
{% endblock %}